body
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+0,dfffed+40,eeeeee+100 */
  background: #ffffff
  background: -moz-linear-gradient(left, #ffffff 0%, #dfffed 40%, #eeeeee 100%)
  background: -webkit-linear-gradient(left, #ffffff 0%, #dfffed 40%, #eeeeee 100%)
  background: linear-gradient(to right, #ffffff 0%, #dfffed 40%, #eeeeee 100%)

  padding: 20px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin: 0 auto
  max-width: 1440px
  min-width: 240px

.flex-container
  display: -ms-flexbox
  display: -webkit-flex
  display: flex
  -webkit-flex-direction: row
  -ms-flex-direction: row
  flex-direction: row
  -webkit-flex-wrap: nowrap
  -ms-flex-wrap: nowrap
  flex-wrap: nowrap
  -webkit-justify-content: flex-start
  -ms-flex-pack: start
  justify-content: flex-start
  -webkit-align-content: stretch
  -ms-flex-line-pack: stretch
  align-content: stretch
  -webkit-align-items: flex-start
  -ms-flex-align: start
  align-items: flex-start

.flex-item
  -webkit-flex: 1 1 auto
  -ms-flex: 1 1 auto
  flex: 1 1 auto
  padding: 5px
  width: 100%

summary
  display: inline-block
  font-size: 16px
  font-weight: bold

details .content
  margin-top: 5px

details ul
  padding-left: 60px

label
  margin-bottom: 0
  margin-left: 10px

/* BEGIN BOOTSTRAP OVERRIDES */
article h1
  font-size: 30px

article h2
  font-size: 24px

article h3
  font-size: 20px

.dropdown-menu
  padding-bottom: 0

.dropdown-menu>li>a
  padding: 0 10px

.navbar
  -webkit-box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.4)
  -moz-box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.4)
  box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.4)
  -webkit-transition: 0.2s
  transition: 0.2s

.navbar:hover
  -webkit-box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.95)
  -moz-box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.95)
  box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.95)

.navbar-brand
  padding: 8px

.navbar-brand>img
  max-height: 100%

input[type=checkbox]
  margin-top: 1px
  pointer-events: none
  vertical-align: text-top

.progress
  border: 1px solid #999

.progress-bar
  -webkit-transition: width 0.2s linear 1s
  transition: width 0.2s linear 1s
/* END BOOTSTRAP OVERRIDES */

a,
input,
label,
summary
  cursor: pointer

details
  margin-bottom: 5px

details > details
  margin-left: 40px

.content .description
  margin-left: 18px

/* Hidden States */
.spinner
/*.loading .progress DISABLING THIS STYLE ALLOWS THE INITIAL PAINT OF THE PROGRESS BAR TO ANIMATE IN */
  display: none

/* Begin Spinner */
.spinner
  display: none
  pointer-events: none

.loading .spinner
  display: block
  height: 60px
  left: 50%
  left: calc(50% - 30px)
  margin: 94px auto 0 auto
  position: absolute
  width: 60px
  -webkit-animation: rotation .75s infinite linear
  -moz-animation: rotation .75s infinite linear
  -o-animation: rotation .75s infinite linear
  animation: rotation .75s infinite linear
  border-bottom: 6px solid rgba(0, 0, 0, 0.6)
  border-left: 6px solid rgba(0, 0, 0, 0.2)
  border-right: 6px solid rgba(0, 0, 0, 0.2)
  border-top: 6px solid rgba(0, 0, 0, 0.2)
  border-radius: 100%

@-webkit-keyframes rotation
  from
    -webkit-transform: rotate(0deg)
  to
    -webkit-transform: rotate(360deg)

@-moz-keyframes rotation
  from
    -moz-transform: rotate(0deg)
  to
    -moz-transform: rotate(360deg)

@-o-keyframes rotation
  from
    -o-transform: rotate(0deg)
  to
    -o-transform: rotate(360deg)

@keyframes rotation
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)
/* End Spinner */

/* Gag breakpoint, for people who try to go narrower than 240px. Pure CSS, so no image request until triggered */
@media (max-width: 240px)
  *
    display: none !important

  html, head, body
    display: block !important

  body
    background-image: url("/images/gonna-get-you.gif")
    background-repeat: repeat-y
    background-size: 100%

  body:before
    content: "Application does not get any more responsive than this at less then 240 pixel screen width."
    font-size: 18px
    position: absolute
    top: 9.5em
    width: 100%
    left: 0
    text-align: center

@media (max-width: 640px)
  article h1
    font-size: 22px

  article h2
    font-size: 18px

  article h3
    font-size: 16px

  summary
    font-size: 14px

  body
    padding: 5px

@media print
  body
    padding-top: 0
